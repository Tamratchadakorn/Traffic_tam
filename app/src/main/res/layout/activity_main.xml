<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pcom_5.traffic_tam.MainActivity"
    android:background="@drawable/wall16"
    android:id="@+id/ขขขขขขขขขขขขขขขขข">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textbttom"
        android:id="@+id/buttonsoud"
        android:onClick="clicksound"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:layout_alignWithParentIfMissing="false"
        android:textColor="@color/colortest"
        android:background="#f87a7a"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:id="@+id/txtTitle"
        android:textSize="@dimen/h1"
        android:textColor="@color/colortest"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:background="#14ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/buttonsoud"
        android:layout_margin="20dp" />
</RelativeLayout>
